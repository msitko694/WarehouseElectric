<Window x:Class="WarehouseElectric.InvoiceFullView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvoiceFullView" Height="716" Width="673"
        xmlns:h="clr-namespace:WarehouseElectric.Helpers"
        xmlns:view="clr-namespace:WarehouseElectric"
        h:HelpProvider.HelpString="Okno wyświetlające szczegółowe dane o wybranej fakturze" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <view:InvoiceDetailsControl x:Name="IvoiceDetails" Grid.ColumnSpan="4" Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" />
        <Label Content="Razem NETTO:" Height="28" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="2"  Name="labelTotalNetto" VerticalAlignment="Center"  />
        <Label Content="Naliczony podatek:" Height="28" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="2" Name="labelTotalVAT" VerticalAlignment="Center"  />
        <Label Content="Do zapłaty:" Height="28" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="2" Name="labelTotalBrutto" VerticalAlignment="Center"/>
        <TextBlock h:HelpProvider.HelpString="Sumaryczna kwota netto do zapłaty" Text="{Binding Path=TotalNetto}" Height="23" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="3" Name="TextBlockTotalNetto" VerticalAlignment="Center" Width="90"/>
        <TextBlock h:HelpProvider.HelpString="Kwota naliczonego podatku" Text="{Binding Path=TotalVat}" Height="23" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="3" Name="textBlockTotalVAT"  VerticalAlignment="Center" Width="90"/>
        <TextBlock h:HelpProvider.HelpString="Sumaryczna kwota brutto do zapłaty" Text="{Binding Path=TotalBrutto}" Height="23" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="3" Name="textBlockTotalBrutto" Width="90" FontStyle="Normal" VerticalAlignment="Center" FontWeight="ExtraBold"/>
        <Label Content="Typ dostawy:" Height="28" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="1" Name="labelSpedition" VerticalAlignment="Center" />
        <TextBlock Text="{Binding Path=SpeditionType}" Height="23" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Name="TextBlockSpedition" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2" />
        <Label Content="Fakturę wystawił:" Height="28" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2" Name="labelIssuedBy" VerticalAlignment="Center" />
        <TextBlock Text="{Binding Path=IssuedByWorker}" Height="23" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2" Name="TextBlockIssuedByWorkerId" VerticalAlignment="Center"  Width="200" />
    </Grid>
</Window>
